{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All C++ Files with Boost (clang++)",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "*.cpp",
                "-o",
                "Prog",
                "-lboost_system",
                "-lboost_filesystem"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}